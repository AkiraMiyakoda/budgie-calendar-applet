<schemalist>
  <schema id="io.github.budgie-calendar-applet" path="/io/github/budgie-calendar-applet/" gettext-domain="budgie-calendar-applet">
    <key name="date-format-enable" type="b">
      <default>false</default>
      <summary>Clock Format</summary>
      <description>
        Enable or disable custom clock format
      </description>
    </key>
    <key name="date-format" type="s">
      <default l10n="messages">"%e %b %Y - %H:%M"</default>
      <summary>Clock Format</summary>
      <description>
        Show the clock at the format you want
      </description>
    </key>
  </schema>
</schemalist>
